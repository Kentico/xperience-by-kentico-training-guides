@using Microsoft.AspNetCore.Html
@using TrainingGuides.Web.Features.LandingPages

@model TemplateViewModel<LandingPageTemplateProperties>

@{
    var templateModel = Model.GetTemplateModel<LandingPageViewModel>();
    string tagText = Model.Properties.MessageType.ToLower();
    HtmlString openingTagHtml = new HtmlString($"<{tagText}>");
    HtmlString closingTagHtml = new HtmlString($"</{tagText}>");
}

@openingTagHtml
    @templateModel.Message
@closingTagHtml

<editable-area area-identifier="areaMain" />