@using DancingGoat.Models

@model ProductSectionListViewModel

@if (Model.Items.Any())
{
    foreach (var product in Model.Items)
    {
        <!-- 4 products on row for large screen -->
        <div class="col-md-3 col-lg-3">
            @Html.DisplayFor(m => product, "ProductListItem")
        </div>
    }
}
else
{
    <span class="ContentLabel">@HtmlLocalizer["No products."]</span>
}